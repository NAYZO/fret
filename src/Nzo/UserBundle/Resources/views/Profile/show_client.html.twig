{% extends "NzoTunisiefretBundle::layoutClient.html.twig" %}
{% block title %} {{ parent() }} Client {% endblock %}
{% block banner %}
    <div class="jumbotron">
        <div class="col-md-4"> 
            <div class="row">
                <h4 class="title-banner" style="">Votre Profil</h4>
            </div>
        </div>
    </div>
{% endblock banner %}
{% block content %}
    <form action="" id="contactForm" class="well col-md-6 col-md-offset-3" style="padding: 40px">
        <fieldset> 
            <legend class="colorlegend"><strong>Votre Profil</strong></legend>
            <img src="{{ asset('clientfilesupload/')}}{{user.logoname}}" width="200" height="200" class="img-thumbnail col-md-offset-3 bottom" alt="alll">  
            <div class="col-md-5">   
                <ul class="list-unstyled">
                    <li><label><strong>Nom : </strong> <span>{{user.nom}}</span></label></li>
                    <li><label><strong>Prénom : </strong><span>{{user.prenom}}</span></label></li>
                    <li><label><strong>Ville : </strong><span>{{user.ville}}</span></label></li>
                </ul>
            </div>
            <div class="col-md-6">
                <ul class="list-unstyled">
                    <li><label><strong>Téléphone fix :</strong> <span>{{user.tel}}</span></label></li>
                    <li><label><strong>adresse : </strong><span>{{user.adresse}}</span></label></li>
                    <li><label><strong>Email : </strong><span>{{user.email}}</span></label></li>
                </ul>
            </div>
        </fieldset>
     </form>
{% endblock content %}