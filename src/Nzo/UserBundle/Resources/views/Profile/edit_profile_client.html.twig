{% extends "NzoTunisiefretBundle::layoutClient.html.twig" %}
{% block title %} {{ parent() }} Client {% endblock %}
{% block banner %}
    <div class="jumbotron">
        <div class="col-md-4"> 
            <div class="row">
                <h4 class="title-banner" style="">Modification Profil</h4>
            </div>
        </div>
    </div>
{% endblock banner %}

{% block content %}
<div class="col-md-8 col-md-offset-2">
    <form action="{{ path('fos_user_profile_edit') }}" id="contactForm" method="post" {{ form_enctype(form) }} class="well" style="padding: 40px" role="form">
        <fieldset>
            <legend class="colorlegend"><strong>Modifer Votre Profil</strong></legend> 
            {% if(form_errors(form)) %}
                <div class="validation-advice"> {{ form_errors(form) }} </div>
            {% endif %}
            <div class="col-md-6">                                             

                {#--Nom d'utilisateur---#}
                <div class="form-group">
                    <label>Nom D'utilisateur</label>
                    {{ form_widget(form.username,{'attr': {'class': 'form-control'}}) }}
                </div>
                {% if(form_errors(form.username)) %}
                    <div class="error-input">{{ form_errors(form.username) }}</div>
                {% endif %}
                   
                {#--Email---#}
                <div class="form-group">
                    <label>Email</label>
                    {{ form_widget(form.email,{'attr': {'class': 'form-control'}}) }}
                </div>
                {% if(form_errors(form.email)) %}
                    <div class="error-input">{{ form_errors(form.email) }}</div>
                {% endif %} 
                    
                {#--Nom--#}
                <div class="form-group">
                    <label>Nom</label>
                    {{ form_widget(form.nom,{'attr': {'class': 'form-control'}}) }}
               </div>
                {% if(form_errors(form.nom)) %}
                    <div class="error-input">{{ form_errors(form.nom) }}</div>
                {% endif %} 
                    
                {#--Prenom---#}
                <div class="form-group">
                    <label>Pr√©nom</label>
                    {{ form_widget(form.prenom,{'attr': {'class': 'form-control'}}) }}
                </div>
                {% if(form_errors(form.prenom)) %}
                  <div class="error-input">{{ form_errors(form.prenom) }}</div>
                {% endif %} 
                  
            </div>
            <div class="col-md-6"> 

                {#--Ville---#}
                <div class="form-group">
                    <label>Ville</label>
                    {{ form_widget(form.ville,{'attr': {'class': 'form-control','placeholder': 'Ville'}}) }}
                </div>
                {% if(form_errors(form.ville)) %}
                  <div class="error-input">{{ form_errors(form.ville) }}</div>
                {% endif %}  

                {#--Adresse---#}
                <div class="form-group">
                  <label>Adresse</label>
                    {{ form_widget(form.adresse,{'attr': {'class': 'form-control','placeholder': 'Adresse'}}) }}
                </div>
                {% if(form_errors(form.adresse)) %}
                  <div class="error-input">{{ form_errors(form.adresse) }}</div>
                {% endif %}    

                {#--Tel---#}
                <div class="form-group">
                    <label>Tel</label>
                    {{ form_widget(form.tel,{'attr': {'class': 'form-control','placeholder': 'Tel'}}) }}
                </div>
                {% if(form_errors(form.tel)) %}
                  <div class="error-input">{{ form_errors(form.tel) }}</div>
                {% endif %}        

                {#--Logo---#}
                <div class="form-group">
                    <label>Logo</label>
                    {{ form_widget(form.uploadlogo,{'attr': {'class': 'form-control','placeholder': 'Logo'}}) }}
                </div>
                {% if(form_errors(form.uploadlogo)) %}
                  <div class="error-input">{{ form_errors(form.uploadlogo) }}</div>
                {% endif %} 
            </div>
            <input type="submit" value="Modifier" name="_submit" class="btn btn-primary pull-right">
            {{ form_rest(form) }}
        </fieldset>
    </form>
</div>
{% endblock content %}