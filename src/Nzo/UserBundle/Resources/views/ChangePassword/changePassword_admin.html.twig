{% block content %}
<div class="padding">
    <ul id="breadcrumbs-two">
        <li><a href="{{path('nzo_tunisiefret_homepage')}}">Accueil</a></li>
        <li class="current"><span>Changer Mot de Passe</span></li>
    </ul>
        <hr>
    <div class="row">
<form action="{{ path('fos_user_change_password') }}" method="post"  class="col-md-6 col-md-offset-3 panel panel-default padding" style="padding: 40px" >
    <fieldset>
                <legend class="text-primary"><strong>Changez Votre Mot de Passe</strong></legend>
                {% if form_errors(form)  %}
                    <div class="alert alert-error text-center"> {{form_errors(form)}} </div> 
                {% endif %}

                {#--Current Password---#}
                <div class="form-group">
                    <label>Ancien Mot de Passe <span class="required">*</span></label>
                    {{ form_widget(form.current_password,{'attr': {'class': 'form-control'}}) }}
                </div>  
                {% if form_errors(form.current_password) %}
                    <div class="error-input"> {{form_errors(form.current_password)}} </div> 
                {% endif %}

                {#--New Password---#}
                <div class="form-group">
                    <label>Nouveau Mot de Passe <span class="required">*</span></label>
                    {{ form_widget(form.plainPassword.first,{'attr': {'class': 'form-control'}}) }}
                </div>          
                {% if form_errors(form.plainPassword.first)  %}
                    <div class="error-input"> {{form_errors(form.plainPassword.first)}} </div> 
                {% endif %}

                {#--Confirmation New Password---#}
                <div class="form-group">
                    <label>Confirmez Nouveau Mot de Passe <span class="required">*</span></label>
                    {{ form_widget(form.plainPassword.second,{'attr': {'class': 'form-control'}}) }}
                </div> 
                {{ form_rest(form) }}
                <input type="submit" value="Changer Mot de Passe" name="_submit" class="btn btn-primary pull-right">  
            </fieldset>
 </form>
        </div>
    </div>
{% endblock content %}