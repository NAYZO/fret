{% extends "NzoTunisiefretBundle::layoutClient.html.twig" %}
{% block title %} {{ parent() }} Client {% endblock %}
{% block banner %}
    <div class="jumbotron">
        <div class="col-md-4"> 
            <div class="row">
                <h4 class="title-banner" style="">Changer Mot de Passe</h4>
            </div>
        </div>
    </div>
{% endblock banner %}
{% block content %}
<div class="row">
<form action="{{ path('fos_user_change_password') }}" method="post" class="col-md-5 col-md-offset-3" style="padding: 40px" role="form">
    <fieldset>
        <legend class="colorlegend"><strong>Changer Votre Mot de Passe</strong></legend>
        {% if form_errors(form)  %}
            <div class="alert alert-error text-center"> {{form_errors(form)}} </div> 
        {% endif %}
        
        {#--Current Password---#}
        <div class="form-group">
            <label for="disabledTextInput">Votre Mot de Passe Courant</label>
            {{ form_widget(form.current_password,{'attr': {'class': 'form-control'}}) }}
        </div>  
        {% if form_errors(form.current_password) %}
            <div class="error-input"> {{form_errors(form.current_password)}} </div> 
        {% endif %}
            
        {#--New Password---#}
        <div class="form-group">
            <label for="disabledTextInput">Votre Nouveau Mot de Passe Courant</label>
            {{ form_widget(form.plainPassword.first,{'attr': {'class': 'form-control'}}) }}
        </div>          
        {% if form_errors(form.plainPassword.first)  %}
            <div class="error-input"> {{form_errors(form.plainPassword.first)}} </div> 
        {% endif %}

        {#--Confirmation New Password---#}
        <div class="form-group">
            <label for="disabledTextInput">Confirmer Votre Nouveau Mot de Passe Courant</label>
            {{ form_widget(form.plainPassword.second,{'attr': {'class': 'form-control'}}) }}
        </div> 
        {{ form_rest(form) }}
        <input type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" name="_submit" class="btn btn-danger pull-right">  
    </fieldset>
 </form>
    </div>
{% endblock content %}