{% extends "NzoTunisiefretBundle::layoutExportateur.html.twig" %}
{% block title %} {{ parent() }} Liste des Notifications Messages{% endblock %}

{% block banner %}
{#----------------Bannier de la page----------------#}
<div class="jumbotron">
    <div class="col-md-4"> 
        <div class="row">
            <h4 class="title-banner" style="">Liste des Notifications des Messages</h4>
        </div>
    </div>
</div>
{% endblock banner %}

{% block content %}
<div class="padding">
    <div class="row bottom" style="padding-right: 16px;">
        {#----------------Arborescence----------------#}
        <div class="col-md-9 pull-left">
            <ul id="breadcrumbs-two" style="margin-top: 14px;">
                <li><a href="{{path('nzo_tunisiefret_homepage')}}">Accueil</a></li>
                <li class="current"><span>Liste des Notifications des Messages</span></li>
            </ul>
        </div>
        {#----------------Pagination----------------#}
        <div class="pull-right">
            {{ knp_pagination_render(listemessages) }}
        </div>
    </div>

    {#----------------Titre de la page----------------#}
    <div class="legend2">
        <h4>La Liste de Notifications de Vos Messages</h4>
    </div>
    
    {#----------------Liste des notificaitons----------------#} 
    {% for notif in listemessages %}
    <div class="panel panel-info bottom">
        <div class="panel-body">
            <div class="media">
                <span class="pull-left">
                    <img class="media-object img-thumbnail" src="{{ asset('clientfilesupload/')}}{{notif.logoemetteur}}" alt="image"  width="80">
                </span>
                <div class="media-body">
                    <h4 class="media-heading"><strong>{{notif.emetteur}}</strong></h4>
                    <p style="color: grey">{{notif.date|date("d/m/Y")}}</p>
                    <p>{{notif.titredemandeexport}}</p>
                    <p>{{notif.text}}</p>
                     <a href="{{notif.url}}">voir</a>
               </div>
            </div>
        </div>
    </div>
    {%endfor%}
    {#----------------Pagination----------------#} 
    <div class="navigation">
        {{ knp_pagination_render(listemessages) }}
    </div>
</div>
{% endblock content %} 
 