{% extends "NzoTunisiefretBundle::layoutExportateur.html.twig" %}

{% block title %} {{ parent() }} Liste Travail En Cours {% endblock %}
{% block banner %}
<div class="jumbotron">
    <div class="col-md-4"> 
        <div class="row">
            <h4 class="title-banner" style="">Liste Travail En Cours</h4>
        </div>
    </div>
</div>
{% endblock banner %}
{% block content %}
<div class="col-md-8 col-md-offset-2 well">
<table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Titre</th>
            <th>Date Postule</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
            {% for postule in listepostules %}
          <tr>
            <td>{{postule.demandeexport.titre}}</td>
            <td>{{postule.datepostule|date("d/m/Y H:i")}}</td>
            <td>
                <a href="{{path('exp_voir_detail_postule', {'id':postule.id} )}}">  Voir detail</a>
            </td>
         
          </tr>
             {% endfor %}
        </tbody>
      </table>

    
    <div class="navigation">
    {{ knp_pagination_render(listepostules) }}
    </div>
    </div>
{% endblock content %}
 
 