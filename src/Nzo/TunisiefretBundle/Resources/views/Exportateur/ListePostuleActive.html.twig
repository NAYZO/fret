{% extends "NzoTunisiefretBundle::layoutExportateur.html.twig" %}

{% block title %} {{ parent() }} Liste Postules Active{% endblock %}

{% block banner %}
<div class="jumbotron">
    <div class="col-md-4"> 
        <div class="row">
            <h4 class="title-banner" style="">Liste Postules Active</h4>
        </div>
    </div>
</div>
{% endblock banner %}

{% block content %}
<div class="padding">
<div class="row" style="padding-right: 16px;">
    <div class="col-md-9 pull-left">
        <ul id="breadcrumbs-two" style="margin-top: 14px;">
            <li><span>Liste Postules</span></li>
            <li class="current"><span>Active</span></li>
        </ul>
    </div>
   <div class="pull-right">
        {{ knp_pagination_render(listepostules) }}
    </div>
</div>
<div class="list-group">
    {% for postule in listepostules %}
        <div class="list-group-item" style="padding: 30px;">
            <div class="legend list-group-item-heading">
                <h4 class="cl-effect-1"><a href="{{path('exp_detail_postule_active', {'id':postule.id} )}}">{{postule.demandeexport.titre}}</a></h4>  
            </div>
            <p style="color: grey;">Postulé le {{postule.datepostule|date("d/m/Y")}}</p>
            <p class="list-group-item-text">
                {% if postule.demandeexport.description|length > 150 %}
                    {{postule.demandeexport.description|slice(0, 150)}}...
                {%else%}
                    {{postule.demandeexport.description}}
                {% endif %}
                <a href="{{path('exp_detail_postule_active', {'id':postule.id} )}}" class="pull-right"> Voir détails </a>
            </p>
              
        </div>
    {% endfor %}
</div>
<div class="row" style="padding-right: 16px;">
    <div class="pull-right">
        {{ knp_pagination_render(listepostules) }}
    </div>
</div>
{% endblock content %}