{% extends "NzoTunisiefretBundle::layoutClient.html.twig" %}

{% block title %} {{ parent() }} Accueil {% endblock %}
{% block banner %}
<div class="jumbotron">
    <div class="col-md-4"> 
        <div class="row">
            <h4 class="title-banner" style="">Dashboard</h4>
        </div>
    </div>
</div>

{% endblock banner %}
{% block content %}

<a href=""><img class="media-object img-thumbnail" src="{{ asset('clientfilesupload/')}}{{app.user.logoname}}" alt="" width="100" height="100"></a>
<span id="nzoratingstar"></span> {%if app.user.note > -1%} <strong>({{app.user.note}})</strong>{%endif%}
{{app.user.nomentrop}}
<br> <a href="{{ path('fos_user_profile_show') }}">Voir Profil</a>
<br> <a href="{{ path('fos_user_profile_edit') }}" > Modifier Profil</a>

<br> <br>
Analyse: 
<br>Nombre Demande dépodé: {{app.user.nbdemandeexportdepose}}
<br>Nombre Demande active: {{depose|length}}
<br>Nombre Contrat En Cours: {{app.user.nbcontratencours}}
<br>Nombre Contrat Terminé: {{app.user.nbcontrattermine}}
<br>Nombre Demande Archivé: {{nbarchive}}

<br> <br>  

Dernier Demandes déposé:<br>
{%for key,demande in depose if key<3 %}
  <a href="{{path('client_demande_export_active', {'id':demande.id} )}}">{{demande.titre}}</a> ( {{demande.demandeexportpostule|length}} ) | Déposé le {{demande.datedepos|date("d/m/Y")}} <br>
{%endfor%}
    <a href="{{ path('nzo_voirlistedemande_export_active') }}" >Voir tout</a>
    
<br> <br>

Dernier Demandes En Cours:<br>
{%for demande in encours %}

{%set idpostule = render(controller('NzoTunisiefretBundle:Client:GetPostuleEncoursByDemande', {'id': demande}))%}
<a href="{{path('client_postule_encours_detail', {'id':idpostule} )}}">{{demande.titre}}</a> | Déposé le {{demande.datedepos|date("d/m/Y")}} <br>
  
{%endfor%}
    <a href="{{ path('client_contrat_encours') }}" >Voir tout</a>
    
    
{% endblock content %}

{% block js %} 
    <script src="{{ asset('bundles/nzotunisiefret/js/jquery.raty.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('#nzoratingstar').raty({ path: '/bundles/nzotunisiefret/images', noRatedMsg: "aucune note associé!", hints: ['', '', '', '', ''], readOnly: true, score: {{app.user.note}} });
        });   
    </script>
{% endblock js %}