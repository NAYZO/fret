{% extends "NzoTunisiefretBundle::layoutClient.html.twig" %}
{% block title %} {{ parent() }} Client {% endblock %}
{% block banner %}
    <div class="jumbotron">
        <div class="col-md-4"> 
            <div class="row">
                <h4 class="title-banner" style="">Demande D'export</h4>
            </div>
        </div>
    </div>
{% endblock banner %}
{% block content %}
<div class="col-md-8 col-md-offset-2">
<form action="#" id="contactForm" method="post" {{ form_enctype(form) }} class="well" style="padding: 40px" role="form">
    <fieldset>
        <legend class="colorlegend"><strong>Inscrivez Vous</strong></legend>  
  
        
        
        
        
        
        {% if(form_errors(form)) %}
            <div class="alert alert-error text-center"> {{ form_errors(form) }} </div>
        {% endif %}
        
        
        
        
        
        
        
        
        
        {#--titre---#}
        <div class="form-group">
            <label>Titre</label>
            {{ form_widget(form.titre,{'attr': {'class': 'form-control'}}) }}
        </div>
        {% if(form_errors(form.titre)) %}
          <div class="error-input">{{ form_errors(form.titre) }}</div>
        {% endif %}
        
        {#--Description---#}
        <div class="form-group">
            <label>Description</label>
            {{ form_widget(form.description,{'attr': {'class': 'form-control'}}) }}
        </div>
        {% if(form_errors(form.description)) %}
          <div class="error-input">{{ form_errors(form.description) }}</div>
        {% endif %}
        
        {#--Pays---#}
        <div class="form-group">
            <label>Pays</label>
            {{ form_widget(form.pays,{'attr': {'class': 'form-control'}}) }}
        </div>
        {% if(form_errors(form.pays)) %}
          <div class="error-input">{{ form_errors(form.pays) }}</div>
        {% endif %}
          
        {#--Ville---#}
        <div class="form-group">
            <label>Ville</label>
            {{ form_widget(form.ville,{'attr': {'class': 'form-control'}}) }}
        </div>
        {% if(form_errors(form.ville)) %}
          <div class="error-input">{{ form_errors(form.ville) }}</div>
        {% endif %}
           
        {#--Code Postal---#}
        <div class="form-group">
            <label>Code Postal</label>
            {{ form_widget(form.codepostal,{'attr': {'class': 'form-control'}}) }}
        </div>
        {% if(form_errors(form.codepostal)) %}
          <div class="error-input">{{ form_errors(form.codepostal) }}</div>
        {% endif %}

        {#--Adresse---#}
        <div class="form-group">
            <label>Adresse</label>
            {{ form_widget(form.adresse,{'attr': {'class': 'form-control'}}) }}
        </div>
        {% if(form_errors(form.adresse)) %}
          <div class="error-input">{{ form_errors(form.adresse) }}</div>
        {% endif %}
          
        {#--Date Maximal---#}
        <div class="form-group">
            <label>Date Maximal</label>
            {{ form_widget(form.datemax,{'attr': {'class': 'form-control'}}) }}
        </div>
        {% if(form_errors(form.datemax)) %}
          <div class="error-input">{{ form_errors(form.datemax) }}</div>
        {% endif %}
          
        {#--Prix---#}
        <div class="form-group">
            <label>Prix</label>
            {{ form_widget(form.prix,{'attr': {'class': 'form-control'}}) }}
        </div>
        {% if(form_errors(form.prix)) %}
          <div class="error-input">{{ form_errors(form.prix) }}</div>
        {% endif %}
        
        {#--Demande Export Type---#}
        <div class="form-group">
            <label>Demande Export Type</label>
            {{ form_widget(form.demandeexporttype,{'attr': {'class': 'form-control'}}) }}
        </div>
        {% if(form_errors(form.demandeexporttype)) %}
          <div class="error-input">{{ form_errors(form.demandeexporttype) }}</div>
        {% endif %}
          
        <input type="submit" value="Enregistrer" name="_submit" class="btn btn-primary pull-right">
        
        
        
        
        
        
        {{ form_rest(form) }}
        
        
        
        
        
        
        
    </fieldset>
</form>
</div>
{% endblock content %}

 