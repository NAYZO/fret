{% extends "NzoTunisiefretBundle::layoutClient.html.twig" %}
{% block title %} {{ parent() }} Liste Des Demandes Export Type {% endblock %}

{% block banner %}
<div class="jumbotron">
    <div class="col-md-4"> 
        <div class="row">
            <h4 class="title-banner" style="">Liste Des Demandes Export Type</h4>
        </div>
    </div>
</div>
{% endblock banner %}

{% block content %}

<div class="list-group">
    {% for demande in listedemandeexporttype %}
        <div class="list-group-item" style="padding: 30px;">
            <div class="legend list-group-item-heading">
                <h4><strong>{{demande.reference}} | {{demande.titre}}</strong></h4>
                <ul class="nav nav-pills pull-right cl-effect-17" style="margin-top: -38px;">
                    <li> <a href="{{path('client_reposter_demande_type', {'id':demande.id} )}}"> Reposter</a></li>
                    <li style="margin-top: 8px;">|</li>
                    <li> <a href="{{path('client_supprimer_demande_type', {'id':demande.id} )}}"> Supprimer</a></li>
                </ul>
            </div>
                <p style="color: grey;">{{demande.pays}} | DÃ©poser le {{demande.datedepos|date("d/m/Y")}}</p>
            <p class="list-group-item-text">
                {% if demande.description|length > 150 %}
                    {{demande.description|slice(0, 150)}}...
                {%else%}
                    {{demande.description}}
                {% endif %}
                <a href="{{path('nzo_detaildemande_export_type', {'id':demande.id} )}}" class="pull-right"> Voir detail </a>
            </p>
              
        </div>
    {% endfor %}
</div>
{{ knp_pagination_render(listedemandeexporttype) }}


{% endblock content %} 
 