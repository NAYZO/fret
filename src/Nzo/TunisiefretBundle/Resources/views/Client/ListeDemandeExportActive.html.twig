{% extends "NzoTunisiefretBundle::layoutClient.html.twig" %}
{% block title %} {{ parent() }} Liste Des Demandes Export Active {% endblock %}

{% block banner %}
<div class="jumbotron">
    <div class="col-md-4"> 
        <div class="row">
            <h4 class="title-banner" style="">Liste Des Demandes Export Active</h4>
        </div>
    </div>
</div>
{% endblock banner %}

{% block content %}
<div class="row" style="padding-right: 16px;padding-left: 16px;">
   <div class="pull-right">
        {{ knp_pagination_render(listedemandeexport) }}
    </div>
</div>
<div class="list-group">
    {% for demande in listedemandeexport %}
        <div class="list-group-item" style="padding: 30px;">
            <div class="legend list-group-item-heading">
                <h4><a href="{{path('nzo_detaildemande_export', {'id':demande.id} )}}">{{demande.titre}}</a></h4>  
            </div>
            <p style="color: grey;">Nombre de Postule: {{demande.nombredepostule}} | Déposer le {{demande.datedepos|date("d/m/Y")}}</p>
            <p class="list-group-item-text">
                {% if demande.description|length > 150 %}
                    {{demande.description|slice(0, 150)}}...
                {%else%}
                    {{demande.description}}
                {% endif %}
                <a href="{{path('nzo_detaildemande_export', {'id':demande.id} )}}" class="pull-right"> Voir détails </a>
            </p>
              
        </div>
    {% endfor %}
</div>
<div class="row" style="padding-right: 16px;">
    <div class="pull-right">
        {{ knp_pagination_render(listedemandeexport) }}
    </div>
</div>
{% endblock content %} 
 