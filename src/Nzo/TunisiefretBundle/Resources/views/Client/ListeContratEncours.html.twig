{% extends "NzoTunisiefretBundle::layoutClient.html.twig" %}
{% block title %} {{ parent() }} Liste Demandes Export En Cours {% endblock %}

{% block banner %}
<div class="jumbotron">
    <div class="col-md-4"> 
        <div class="row">
            <h4 class="title-banner" style="">Liste Demandes Export En Cours</h4>
        </div>
    </div>
</div>
{% endblock banner %}

{% block content %}
<div class="padding">
<div class="row" style="padding-right: 16px;">
    <div class="col-md-9 pull-left">
        <ul id="breadcrumbs-two" style="margin-top: 14px;">
            <li><a href="{{path('nzo_tunisiefret_homepage')}}">Accueil</a></li>
            <li><span>Mes Contrats</span></li>
            <li class="current"><span>En Cours</span></li>
        </ul>
    </div>
   <div class="pull-right">
        {{ knp_pagination_render(listecontratencours) }}
    </div>
</div>
{% if listecontratencours is empty %}
   <hr>
   <p class="alert alert-info">Il n'existe aucun Contrat en cours pour le moment !</p>
{%else%}
<div class="list-group">
    {% for demande in listecontratencours %}      
        <div class="list-group-item" style="padding: 30px;">
            <div class="legend list-group-item-heading">
                <h4 class="cl-effect-1"><a href="{{path('client_demande_export_encours_detail', {'id':demande.id} )}}">{{demande.titre}}</a></h4>  
                
            </div>
            <p style="color: grey;">Nombre de Postule: {{demande.nombredepostule}} | Déposé le {{demande.datedepos|date("d/m/Y")}}</p>
            <div class="row">
                <span class="list-group-item-text col-md-10">
                    {% if demande.description|length > 150 %}
                        {{demande.description|slice(0, 150)}}...
                    {%else%}
                        {{demande.description}}
                    {% endif %}
                    <a href="{{path('client_demande_export_encours_detail', {'id':demande.id} )}}" class="pull-right"> Voir détails </a>
                </span>
                <div class="col-md-2 media" style="margin-top: 0;border-left: 1px solid rgb(218, 213, 213)">
                   <a href="" class="pull-left"><img class="media-object img-thumbnail" src="{{ asset('exportateurfilesupload/')}}{{demande.ContratEnCoursPostule.exportateur.logoname}}" alt="" width="50" height="100"></a>
                   <span class="media-body">{{demande.ContratEnCoursPostule.exportateur.nomentrop}}</span>
               </div>
            </div>
         </div>
    {% endfor %}
</div>
<div class="row" style="padding-right: 16px;">
    <div class="pull-right">
        {{ knp_pagination_render(listecontratencours) }}
    </div>
</div>
{%endif%}
{% endblock content %}