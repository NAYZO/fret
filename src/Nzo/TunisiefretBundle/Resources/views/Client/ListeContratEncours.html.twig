{% extends "NzoTunisiefretBundle::layoutClient.html.twig" %}
{% block title %} {{ parent() }} Liste Contrat En Cours {% endblock %}

{% block banner %}
<div class="jumbotron">
    <div class="col-md-4"> 
        <div class="row">
            <h4 class="title-banner" style="">Liste Contrat En Cours</h4>
        </div>
    </div>
</div>
{% endblock banner %}

{% block content %}
<div class="col-md-8 col-md-offset-2 well">
<table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Titre</th>  
            <th>Reference</th>
            <th>Pays</th>
            <th>datemax</th>
            <th>date depos</th>
            <th>nombre de postule</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
            {% for demande in listecontratencours %}
          <tr>
            <td>{{demande.titre}}</td>
            <td>{{demande.reference}}</td>          
            <td>{{demande.pays}}</td>           
            <td>{{demande.datemax|date("d/m/Y")}}</td>
            <td>{{demande.datedepos|date("d/m/Y")}}</td>
            <td>{{demande.nombredepostule}}</td>
            <td>
                <a href="{{path('client_demande_export_encours', {'id':demande.id} )}}"> Voir detail </a>
                <a href="{{path('client_terminer_demande', {'id':demande.id} )}}"> Terminer</a>
            </td>
         
          </tr>
             {% endfor %}
        </tbody>
      </table>

    
    <div class="row" style="padding-right: 16px;">
        <div class="pull-right">
        {{ knp_pagination_render(listecontratencours) }}
        </div>
     </div>
    </div> 
{% endblock content %} 
 