{% block content %}
<div class="padding">
    {#----------------breadcrumb----------------#}
    <ul id="breadcrumbs-two">
      <li><a href="{{path('admin_home')}}">Accueil</a></li>
      <li><span>Liste Demandes</span></li>
      <li><a href="{{path('admin_liste_demande_archive')}}">Archive</a></li>
      <li class="current"><span>Détails</span></li>
    </ul>
    
    {#----------------Titre de la page----------------#}
    <div class="legend2">
        <h4>{{postule.demandeexport.titre}} <span class="text-danger">( {{postule.demandeexport.type}} )</span></h4>
    </div>
    
    {#----------------Etat de la demande----------------#}
    <div class="row" style="padding-right: 14px;">
        <h4 class="pull-right red">Etat de la demande: Archivé</h4>
    </div>
    
    {#----------------Collapse----------------#}
    <div class="row">
        <div class="col-md-6">      
            <div class="panel-group" id="accordion" style="margin-bottom: 10px">
                {#----------------Détails demande Fret----------------#}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">    
                            <h4 class="panel-title">
                                Détail de la demande de fret
                                <img src="{{ asset('bundles/nzotunisiefret/images') }}/down.png" alt="" class="pull-right"/>
                           </h4>
                        </a>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong class="red">Réf : </strong>{{postule.demandeexport.reference}} </p>
                                    <p><strong class="red">Prix : </strong>{{postule.demandeexport.prix}} </p>
                                    <p><strong class="red">Pays : </strong>{{postule.demandeexport.pays | country }} </p>
                                    <p><strong class="red">Ville : </strong>{{postule.demandeexport.ville}} </p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong class="red">Code Postal : </strong>{{postule.demandeexport.codepostal}} </p>
                                    <p><strong class="red">Adresse : </strong>{{postule.demandeexport.adresse}} </p>
                                    <p><strong class="red">Date Maximal : </strong>{{postule.demandeexport.datemax|date("d/m/Y")}} </p>
                                    <p><strong class="red">Date Dépôt : </strong>{{postule.demandeexport.datedepos|date("d/m/Y")}} </p>
                               </div>
                            </div>
                            <hr>
                            <p><strong class="red">Description : </strong>{{postule.demandeexport.description}} </p>      
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
        
        {#----------------Information sur l'Affreteur----------------#}
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading"><h4 class="text-primary">Informations sur l'Affreteur</h4></div>
                    <div class="panel-body">
                               <div class="media">
                            <div class="pull-left">
                                <a href=""><img class="media-object img-thumbnail" src="{{ asset('exportateurfilesupload/')}}{{postule.exportateur.logoname}}" alt="" width="100" height="100"></a>
                            </div>
                          <div class="media-body">
                              <div class="legend bottom" style="padding-bottom: 29px;">
                                  
                                  <a href="{{path('client_profil_exportateur', {'id':postule.exportateur.id | urlencrypt} )}}"><h4 class="media-heading pull-left">{{postule.exportateur.nomentrop}}</h4></a>
                                <span class="pull-right">
                                    <span id="nzoratingstar"></span> <strong>({{postule.exportateur.note}}) </strong>
                                </span>
                              </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="red"><strong>Contrats en cours : </strong> {{postule.exportateur.nbcontratencours}}</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="red"><strong>Contrats en terminé : </strong> {{postule.exportateur.nbcontrattermine}}</p>
                                    </div>
                                </div>
                           </div>
                        </div> 
                    </div>
                </div>
             <div class="panel-group" id="accordion2">
                {#----------------Détails Postule----------------#}
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">
                        <h4 class="panel-title">
                          Détails Postule
                            <img src="{{ asset('bundles/nzotunisiefret/images') }}/down.png" alt="" class="pull-right"/>
                        </h4>
                  </a>  
                  </div>
                  <div id="collapseThree" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <p style="color: grey"><span class="red">Date de Postule :</span> {{postule.datepostule|date("d/m/Y")}} | <span class="red">Durée :</span> {{postule.duree}} | <span class="red">Prix :</span> {{postule.prix}} </p>
                        <p>
                          {{postule.description}}
                        </p> 
                    </div>
                  </div>
                </div>
            </div>
        </div>
        </div>
        
        {#----------------Nombre de message----------------#}
        <h4 class="legend2 bottom">Messages ( {{msgs|length}} )</h4>

        {#----------------Liste des messges----------------#}
        <div class="row">
            <div class="col-md-8">
            {% if msgs is empty %}
                <p class="alert alert-info">Vous n'avez réçu aucun message sur cette demande de fret!</p>
            {%else%}
                {% if msgs|length <= 4 %}   
                    {% for msg in msgs %} 
                        <div class="panel panel-info" id="accordion">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    {%if msg.client != null %} {{msg.client.nomentrop}} {%else%} {{msg.exportateur.nomentrop}}{%endif%}
                                    <p class="pull-right">{{msg.date|date("d/m/Y H:i")}}</p>
                                </h3>
                            </div>
                            <div class="panel-body">
                                {{msg.message}}
                            </div>
                        </div>
                    {% endfor %}    
                {% else %} 
                <div class="panel-group" id="accordion">
                    <!-- First -->
                    <div class="panel panel-info" style=" margin-bottom: 5px">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                               {%if msgs|first.client != null %} {{msgs|first.client.nomentrop}} {%else%} {{msgs|first.exportateur.nomentrop}} {%endif%}
                                <p class="pull-right">{{msgs|first.date|date("d/m/Y H:i")}}</p>
                            </h3>
                        </div>
                        <div class="panel-body">
                             {{msgs|first.message}}
                        </div>
                    </div>
                    <!-- BLOCK --> 
                    <div id='nzolengthmsg' class="panel panel-default" style=" margin-bottom: 5px">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                <span > {{msgs|length -2 }} Messages </span>
                            </h3>
                        </div>
                    </div>
                    <!-- Hidden FOR --> 
                    <div id='nzoblockfor' style="display: none; margin-bottom: 5px">
                        {% for msg in msgs %} 
                        {% if msg != msgs|first and msg != msgs|last %}
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    {%if msg.client != null %} {{msg.client.nomentrop}} {%else%} {{msg.exportateur.nomentrop}}{%endif%}
                                    <p class="pull-right">{{msg.date|date("d/m/Y H:i")}}</p>
                                </h3>
                            </div>
                            <div class="panel-body">
                                 {{msg.message}}
                            </div>
                        </div>
                        {% endif %}  
                      {% endfor %}  
                     </div>          
                    <!-- Last -->
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                {%if msgs|last.client != null %} {{msgs|last.client.nomentrop}} {%else%} {{msgs|last.exportateur.nomentrop}}{%endif%}
                                <p class="pull-right">{{msgs|last.date|date("d/m/Y H:i")}}</p>
                            </h3>
                        </div>
                        <div class="panel-body">
                             {{msgs|last.message}}
                        </div>
                    </div>
                    <!-- END Last -->     
                </div>       
                {% endif %}
                {% endif %}
            </div>    
    </div>
</div>      
{% endblock content %}
 
 {% block js %}  
    <script src="{{ asset('bundles/nzotunisiefret/js/jquery.raty.min.js') }}"></script>
    <script>
        $(document).ready(function(){
           $('#nzolengthmsg').on('click',function(){ 
                $('#nzolengthmsg').remove();
                $('#nzoblockfor').show();
            }); 
            //Rating Star
            $('#nzoratingstar').raty({ path: '/bundles/nzotunisiefret/images', noRatedMsg: "aucune note associé!", hints: ['', '', '', '', ''], readOnly: true, score: {{postule.exportateur.note}} });
        });
    </script>

{% endblock js %}