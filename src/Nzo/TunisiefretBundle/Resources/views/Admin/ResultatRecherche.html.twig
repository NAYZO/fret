{% block content %}
<div class="padding">
<div class="row" style="padding-right: 16px;">
    <div class="col-md-9 pull-left">
        <ul id="breadcrumbs-two" style="margin-top: 14px;">
            <li><a href="{{path('admin_home')}}">Accueil</a></li>
            <li class="current"><span>Resultat Recherche</span></li>
        </ul>
            
    </div>
   
</div>
        <hr>
      <div class="pull-right" style="padding-right: 16px;">
        {{ knp_pagination_render(listedemandeexport) }}
    </div>  

        <div class="row"></div>
{% if listedemandeexport is empty %}
   <hr>
   <p class="alert alert-info">Aucune resultat trouvé !</p>
{%else%}
<div class="list-group">
    {% for demande in listedemandeexport %}
        <div class="list-group-item" style="padding: 30px;">
            <div class="legend list-group-item-heading padding-bottom">
                <h4 class="cl-effect-1 pull-left"><a href="{{path('admin_demande_export_active', {'id':demande.id | urlencrypt} )}}">{{demande.titre}}</a></h4>  
                <h5 class="pull-right text-danger">{{demande.type}}</h5>
            </div>
            <p style="color: grey;">Nombre de Postule: {{demande.nombredepostule}} | Déposer le {{demande.datedepos|date("d/m/Y")}}</p>
            <div class="row">
            <p class="list-group-item-text col-md-10">
                {% if demande.description|length > 150 %}
                    {{demande.description|slice(0, 150)}}...
                {%else%}
                    {{demande.description}}
                {% endif %}
                <a href="{{path('admin_demande_export_active', {'id':demande.id | urlencrypt} )}}" class="pull-right"> Voir détails </a>
            </p>
            <div class="col-md-2 media" style="margin-top: 0;border-left: 1px solid rgb(218, 213, 213)">
                <a href="{{path('admin_detail_client', {'id':demande.client.id | urlencrypt} )}}" class="pull-left"><img class="media-object img-thumbnail" src="{{ asset('clientfilesupload/')}}{{demande.client.logoname}}" alt="" width="50" height="100"></a>
                <a href="{{path('admin_detail_client', {'id':demande.client.id | urlencrypt} )}}"><span class="media-body">{{demande.client.nomentrop}}</span></a>
           </div>
            </div>
              
        </div>
    {% endfor %}
</div>
<div class="row" style="padding-right: 16px;">
    <div class="pull-right">
        {{ knp_pagination_render(listedemandeexport) }}
    </div>
</div>
</div>
{%endif%}
{% endblock content %} 
 