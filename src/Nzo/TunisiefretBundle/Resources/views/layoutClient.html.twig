<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}TunisieFret - {% endblock title %}</title>
        <!--To be sure using the latest rendering mode for IE-->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!-- CSS -->
        <link href="{{ asset('bundles/nzotunisiefret/css/bootstrap.css') }}" rel="stylesheet" media="screen">
        <link href="{{ asset('bundles/nzotunisiefret/css/style.css') }}" rel="stylesheet" media="screen">
        <link href="{{ asset('bundles/nzotunisiefret/css/component.css') }}" rel="stylesheet" media="screen">
         <!--FONT-->
        <link href='http://fonts.googleapis.com/css?family=Istok+Web' rel='stylesheet' type='text/css'>
        
        <script src="{{asset('bundles/nzotunisiefret/js/jquery-2.0.3.min.js') }}"></script>
        {% block head %}  {% endblock head %}
    </head>
    <body>
           <nav class="bg-menu navbar" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Menu</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{path('nzo_tunisiefret_homepage')}}"><img src="{{ asset('bundles/nzotunisiefret/images') }}/logo.png" alt="logo"/></a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav navbar-right nav-style">
                        <li><a href="{{ path('nzo_tunisiefret_homepage') }}">Acceuil</a></li>
                        <li class="dropdown">
                            <a href="#" id="cliknotif" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-bell"></span>
                                <span id='nzonotifnb' class="label label-danger label-style">{%if app.user.notification|length > 0%} {{app.user.notification|length}} {%endif%}</span>
                            </a>
                            <ul id='nzolistnotifajax' class="dropdown-menu  notification" style="margin-top: 26px;">
                              
                            </ul>
                        </li>
                            
                  
                        <li><a href="{{path('client_list_messages')}}" id="cliknotifmsg"><span class="glyphicon glyphicon-envelope"></span><span id='nzomsgnb' class="label label-danger label-style">{%if app.user.notifmsg|length > 0%} {{app.user.notifmsg|length}} {%endif%}</span></a></li>
                        
                        {% include "NzoUserBundle::connexion.html.twig" %}
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div>
        </nav>
    {% block body %}
        
        {% block carrousel %}{% endblock carrousel %}
        {% block banner %}{% endblock banner %}
        {#2eme navigateur #}
        <ul class="box nav nav-pills bottom cl-effect-1">
            <li class="col-md-offset-3"><a href="{{ path('nzo_poserdemande_export') }}" >Poster Demande Export</a></li>
            <li><a href="{{ path('client_list_demande_type') }}">Liste Demandes Export Type</a></li>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Mes Demandes <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('nzo_voirlistedemande_export_active') }}" >Active</a></li>
                    <li><a href="{{ path('nzo_voirlistedemande_export_archive') }}" >Archivé</a></li>
                </ul>
            </li>

            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Mes Contrats <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('client_contrat_encours') }}" >En Cours</a></li>
                    <li><a href="{{ path('client_contrat_terminer') }}" >Terminer</a></li>
                </ul>
            </li>
        </ul>
        {#Container#}
        <section class="container">
            <div class="row">
                <div class="col-md-12 well">
                    {% block content %}{% endblock content %}
                </div>
            </div>
        </section>   
        
        {% block footer %}
            <footer class="footer-bg">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <ul class="list-inline footer-menu">
                            <li><a href="{{path('nzo_tunisiefret_homepage')}}">Acceuil</a></li>
                            <li><a href="{{path('nzo_apropos')}}">A propos de nous</a></li>
                            <li><a href="{{path('nzo_contact')}}">Contact</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4"></div>
                    <div class="col-md-4 text-right copyright">© 2013 Ovynet. All Rights Reserved.</div>
                </div>
            </div>
            <div id="btn_up">
                <img alt="Retour en haut" title="Retour en haut" src="{{ asset('bundles/nzotunisiefret/images') }}/up.png">
            </div>
        </footer>
        {% endblock footer %}

    {% endblock body %} 
    <!--JAVASCRIPT-->

     <script src="{{ asset('bundles/nzotunisiefret/js/bootstrap.js') }}"></script>
     <script src="{{ asset('bundles/nzotunisiefret/js/up.js') }}"></script>
     <script src="{{ asset('bundles/nzotunisiefret/js/modal.js') }}"></script>
     <script>
         $(document).ready(function() {
            setInterval(function(){ 
                $.ajax({
                     url:'{{path("ajax_get_nb_notif_client")}}',
                     type: 'GET',
                     success: function(nbnotif){
                            (nbnotif==0) ? $('#nzonotifnb').html('') : $('#nzonotifnb').html(nbnotif);      
                     },
                     error: function() {
                            alert('error');
                     }
                });
            }, 6000);
            
            setInterval(function(){ 
                $.ajax({
                     url:'{{path("ajax_get_nb_msg_client")}}',
                     type: 'GET',
                     success: function(nbmsg){
                            (nbmsg==0) ? $('#nzomsgnb').html('') : $('#nzomsgnb').html(nbmsg);      
                     },
                     error: function() {
                            alert('error');
                     }
                });
            }, 8500);
         });
         
         $('#cliknotif').on('click', function(){
            $('#nzonotifnb').html('');
            $.ajax({
                     url:'{{path("ajax_get_notif_client")}}',
                     type:"POST",
                     dataType:'json',
                     success: function(a){
                            var b='';
                            for(key in a)
                            {
                                if(a[key]['notifvu']==0)
                                    b+='<li class="nonlu"><a href="#">'+a[key]['notiftext']+'</a></li>';
                                else                      
                                    b+='<li><a href="#">'+a[key]['notiftext']+'</a></li>'; 
                            }
                            b+='<li class="all"><a href="{{path('client_list_notifications')}}" class="text-center">Voir toute les notifications</a></li>';
                            $('#nzolistnotifajax').html(b);
                     },
                     error: function() {
                            alert('error');
                     }
                }); 
         });
     </script>
     {% block js %}  {% endblock js %}
    </body>
    
</html>